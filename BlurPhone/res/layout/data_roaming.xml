<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/message" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/roaming_reenable_message" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/confirmButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@android:string/ok" android:layout_weight="0.5" />
        <Button android:id="@id/reenableButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/roaming_turn_it_on_button" android:layout_weight="0.5" />
    </LinearLayout>
</LinearLayout>
