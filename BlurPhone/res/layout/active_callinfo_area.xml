<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" style="@style/CallInfoArea"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/photo_right" style="@style/CallingImgCntSmall" />
    <LinearLayout android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
        <TextView android:id="@id/name_right" style="@style/TxtCallIdSmall" />
        <View style="@style/Calling_V1" />
        <TextView android:id="@id/number_right" style="@style/TxtNumTypeSmall" />
        <View style="@style/Calling_V1" />
        <TextView android:id="@id/cityid_right" android:visibility="gone" android:singleLine="true" style="@style/TxtNumTypeSmall" />
        <View style="@style/Calling_V1" />
        <LinearLayout android:orientation="horizontal" android:id="@id/sn_status_row_right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/CallInfo_vspacing">
            <ImageView android:id="@id/sn_icon_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/CallInfo_hspacing" />
            <TextView android:id="@id/status_right" android:maxLines="3" style="@style/TxtStatus" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
