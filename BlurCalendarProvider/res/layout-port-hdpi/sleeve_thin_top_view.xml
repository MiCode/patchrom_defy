<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:paddingRight="3.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/navyblue_sleeve_horiz" android:scaleType="fitXY" />
