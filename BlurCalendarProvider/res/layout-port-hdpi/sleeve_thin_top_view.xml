    <TextView android:id="@id/lunar_month_abbrev" android:visibility="gone" android:layout_marginTop="-8.0px" android:layout_toRightOf="@id/day_of_month" android:layout_below="@id/month_abbrev" style="@style/MonthText.TopView.hdpi" />
    <TextView android:id="@id/lunar_month" android:layout_marginTop="-8.0px" android:layout_toRightOf="@id/day_of_month" android:layout_below="@id/month" style="@style/MonthText.TopView.hdpi" />
</RelativeLayout>
