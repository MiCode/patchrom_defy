<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/fsba_brand_nologo" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res/com.motorola.blur.setup">
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.motorola.blur.setup.ProgressBadge android:id="@id/progress_badge" android:layout_width="fill_parent" android:layout_height="wrap_content" app:step="1" app:text="@string/add_accounts" />
            <LinearLayout android:orientation="vertical" android:id="@id/google_login_optional_layout" android:paddingLeft="@dimen/AccSet_hspacing" android:paddingTop="@dimen/AccSet_topSpacing" android:paddingRight="@dimen/AccSet_hspacing" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:id="@id/google_login_title" android:layout_marginBottom="@dimen/AccSet_v2spacing" android:text="@string/google_login_title" style="@style/AccSetTextView" />
                <TextView android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@id/google_login_text" android:layout_marginBottom="@dimen/AccSet_v2spacing" android:text="@string/google_login_txt" style="@style/AccSetTextViewMedium" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.motorola.android.widget.ActionBar android:id="@id/abwidget" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" />
</LinearLayout>
