<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/new_account_group" android:background="@drawable/fsba_brand_nologo" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res/com.motorola.blur.setup">
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <com.motorola.blur.setup.ProgressBadge android:id="@id/progress_badge" android:layout_width="fill_parent" android:layout_height="wrap_content" app:step="0" app:text="@string/blur_account_setup" />
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/AccSet_hspacing" android:paddingRight="@dimen/AccSet_hspacing" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:layout_gravity="left" android:id="@id/new_account_instructions" android:paddingBottom="@blur.res:dimen/formitem_vspacing" android:text="@string/login_to_your_motoblur_account" style="@style/AccSetTextView.Title" />
                <TextView android:id="@id/new_account_email_text" android:paddingBottom="@blur.res:dimen/formitem_vspacing" android:text="@string/motoblur_id_colon" style="@style/AccSetTextViewMedium" />
                <EditText android:id="@id/new_account_email_edit" android:paddingBottom="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/your_email_address" android:singleLine="true" android:layout_weight="1.0" android:inputType="textEmailAddress" />
                <TextView android:id="@id/new_account_password_text" android:paddingBottom="@blur.res:dimen/formitem_vspacing" android:text="@string/password_colon" style="@style/AccSetTextViewMedium" />
                <EditText android:id="@id/new_account_password_edit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/enter_password" android:singleLine="true" android:inputType="textPassword" />
